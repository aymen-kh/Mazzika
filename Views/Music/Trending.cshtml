@model List<Mazzika.Models.Video>

<h1>Trending Music</h1>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
else if (Model != null && Model.Any())
{
    <ul>
        @foreach (var video in Model)
        {
            <li>
                <img src="@video.ThumbnailUrl" alt="@video.Title" style="width: 100px; height: auto;" />
                <strong>@video.Title</strong>
                <p>@video.Description</p>
            </li>
        }
    </ul>
}
else
{
    <p>No trending music available at the moment.</p>
}