<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mazzika</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">
    <div class="d-flex">
        <!-- Side Navigation -->
        <div class="side-nav bg-darker p-3">
            <a class="navbar-brand d-flex align-items-center mb-4" asp-controller="Home" asp-action="Index">
                <i class="bi bi-music-note-beamed me-2"></i>
                <span>Mazzika</span>
            </a>
            
            <div class="nav-section mb-4">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-2"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Music" asp-action="Trending">
                            <i class="bi bi-graph-up me-2"></i> Trending
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Music" asp-action="Recommended">
                            <i class="bi bi-stars me-2"></i> Recommended
                        </a>
                    </li>
                </ul>
            </div>

            <div class="nav-section mb-4">
                <h6 class="sidebar-heading px-3 mt-4 mb-1 text-muted">Library</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Library" asp-action="Index">
                            <i class="bi bi-collection-play me-2"></i> Library
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Music" asp-action="TopTracks">
                            <i class="bi bi-clock-history me-2"></i> History
                        </a>
                    </li>
                </ul>
            </div>

            <div class="nav-section mt-auto">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <div class="user-section p-3">
                        <span class="d-block mb-2">@User.Identity.Name</span>
                        <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">
                            Sign Out
                        </a>
                    </div>
                }
                else
                {
                    <div class="p-3">
                        <a class="btn btn-primary w-100" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-youtube me-2"></i> Sign in
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content flex-grow-1">
            <header class="app-header">
                <div class="d-flex justify-content-between align-items-center p-3">
                    <div class="search-bar flex-grow-1 mx-4">
                        <form method="get" asp-controller="Home" asp-action="Index" class="position-relative">
                            <input type="text" name="searchQuery" class="form-control bg-darker border-0 rounded-pill" 
                                   placeholder="Search songs, artists, or playlists" value="@ViewBag.SearchQuery">
                            <button class="btn position-absolute end-0 top-0 h-100" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </header>

            <main role="main" class="content-area p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Player bar will be rendered at the bottom of every page -->
    <div id="player-bar" style="display: none;">
        <div id="controls">
            <img id="player-thumbnail" src="" alt="Thumbnail" width="60" height="60" class="rounded">
            <div id="song-info">
                <div id="song-title"></div>
            </div>
            <button class="btn btn-link text-light" onclick="prevSong()">
                <i class="bi bi-skip-start-fill" style="font-size: 1.8rem;"></i>
            </button>
            <button class="btn btn-link text-light" onclick="togglePlay()">
                <i id="play-pause-icon" class="bi bi-play-fill" style="font-size: 2rem;"></i>
            </button>
            <button class="btn btn-link text-light" onclick="nextSong()">
                <i class="bi bi-skip-end-fill" style="font-size: 1.8rem;"></i>
            </button>
        </div>
        <div id="progress-container">
            <div class="d-flex justify-content-between">
                <span id="current-time">0:00</span>
                <span id="total-duration">0:00</span>
            </div>
            <input type="range" id="progress" value="0" step="1">
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>